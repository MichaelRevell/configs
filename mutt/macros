
# Provide some "on-line" help.
macro generic "\e?" "<shell-escape>less /usr/local/doc/mutt/manual.txt<enter>"
macro index   "\e?" "<shell-escape>less /usr/local/doc/mutt/manual.txt<enter>"
macro pager   "\e?" "<shell-escape>less /usr/local/doc/mutt/manual.txt<enter>"

macro index "\Cu"    "<pipe-message>urlview<enter>"                       # URL viewer.
macro pager "\Cu"    "<pipe-message>urlview<enter>"                       # URL viewer.
macro pager "\eb"    "<pipe-message>lbdb-fetchaddr<enter>"                # Store address details in lbdb.
macro pager "\ef"    "<pipe-message>view-x-face<enter>"                   # View the X-Face (if there is one).

# Gmail-style keyboard shortcuts
macro index y "<enter-command>unset trash\n <delete-message>" "Gmail archive message"
macro pager y "<enter-command>unset trash\n <delete-message>" "Gmail archive message"

macro index \cD "<enter-command>set trash=\"imaps://imap.googlemail.com/[GMail]/Bin\"\n <delete-message>" "Gmail delete message"
macro pager \cD "<enter-command>set trash=\"imaps://imap.googlemail.com/[GMail]/Bin\"\n <delete-message>" "Gmail delete message"

macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro pager gi "<change-folder>=INBOX<enter>" "Go to inbox"

macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro pager ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"

macro index gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro pager gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"

macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro pager gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"


macro index gl "<change-folder>"
macro pager gl "<change-folder>"

macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro pager gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"

macro index gt "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to sent mail"
macro pager gt "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to sent mail"

